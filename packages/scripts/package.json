{
  "name": "@essex/scripts",
  "version": "27.0.0",
  "description": "A set of scripts to make a essex javascript engineer's life easier",
  "repository": "https://github.com/microsoft/essex-alpha-build-infra/",
  "author": "David Tittsworth <datittsw@microsoft.com>",
  "license": "MIT",
  "scripts": {
    "transpile": "tsc -b .",
    "crlf": "crlf --set=LF \"lib/**/*.mjs\"",
    "perms": "shx chmod +x lib/index.mjs",
    "build": "npm-run-all -p transpile -s crlf perms",
    "build:scripts": "yarn build",
    "clean": "rimraf lib",
    "check-deps": "essex check-deps --ignore @essex/api-extractor-config",
    "release": "yarn npm publish --tolerate-republish --access public"
  },
  "main": "lib/index.mjs",
  "type": "module",
  "bin": {
    "essex": "./lib/index.mjs",
    "essex-scripts": "./lib/index.mjs"
  },
  "publishConfig": {
    "main": "lib/index.mjs",
    "bin": {
      "essex": "./lib/index.mjs",
      "essex-scripts": "./lib/index.mjs"
    }
  },
  "dependencies": {
    "@azure/storage-blob": "^12.23.0",
    "@essex/api-extractor-config": "workspace:^",
    "@essex/swc-opts": "workspace:^",
    "@essex/webpack-config": "workspace:^",
    "@microsoft/api-documenter": "7.19.28",
    "@microsoft/api-extractor": "7.29.2",
    "@swc/core": "1.6.5",
    "archiver": "^7.0.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "crlf": "^1.1.1",
    "debug": "^4.3.5",
    "depcheck": "^1.4.7",
    "glob": "^10.4.2",
    "human-format": "^1.2.0",
    "is-git-dirty": "^2.0.2",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "progress": "^2.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.7",
    "tsconfig": "^7.0.0",
    "typescript": "^5.5.2",
    "webpack": "^5.92.1",
    "webpack-dev-server": "^5.0.4",
    "zx": "^8.1.3"
  },
  "devDependencies": {
    "@essex/tsconfig-node": "workspace:^",
    "@swc/cli": "^0.3.14",
    "@types/archiver": "^6.0.2",
    "@types/debug": "^4.1.12",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.17.5",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.14.8",
    "@types/progress": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "shx": "^0.3.4"
  },
  "peerDependencies": {
    "@essex/jest-config": "workspace:^",
    "react": ">= 16.13.1",
    "react-dom": ">= 16.13.1",
    "typescript": ">= 4",
    "webpack": "*"
  },
  "peerDependenciesMeta": {
    "@essex/jest-config": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "webpack": {
      "optional": true
    }
  }
}
