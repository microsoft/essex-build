{
	"name": "@essex/scripts",
	"version": "19.0.5",
	"description": "A set of scripts to make a essex javascript engineer's life easier",
	"repository": "https://github.com/microsoft/essex-alpha-build-infra/",
	"author": "David Tittsworth <datittsw@microsoft.com>",
	"license": "MIT",
	"scripts": {
		"build:transpile": "swc src -d lib",
		"build:typecheck": "tsc --noEmit",
		"build:crlf": "crlf --set=LF \"lib/**/*.js\"",
		"build:perms": "shx chmod +x lib/index.js",
		"build": "npm-run-all -p build:typecheck build:transpile -s build:crlf build:perms",
		"clean": "rimraf lib"
	},
	"main": "src/dev_index.js",
	"bin": {
		"essex": "./src/dev_index.js",
		"essex-scripts": "./src/dev_index.js"
	},
	"publishConfig": {
		"main": "lib/index.js",
		"bin": {
			"essex": "./lib/index.js",
			"essex-scripts": "./lib/index.js"
		}
	},
	"dependencies": {
		"@azure/storage-blob": "^12.8.0",
		"@essex/eslint-config": "workspace:packages/config-eslint",
		"@essex/eslint-plugin": "workspace:packages/config-eslint-plugin",
		"@essex/shellrunner": "workspace:packages/util-shellrunner",
		"@swc/core": "^1.2.128",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"archiver": "^5.3.0",
		"chalk": "^4.1.2",
		"commander": "^8.3.0",
		"debug": "^4.3.3",
		"eslint": "8.6.0",
		"eslint-import-resolver-node": "^0.3.6",
		"glob": "^7.2.0",
		"human-format": "^0.11.0",
		"mime-types": "^2.1.34",
		"prettier": "^2.5.1",
		"pretty-quick": "^3.1.3",
		"progress": "^2.0.3",
		"rimraf": "^3.0.2",
		"tsconfig": "^7.0.0",
		"typedoc": "^0.22.10",
		"typescript": "^4.5.4"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.55",
		"@tsconfig/node14": "^1.0.1",
		"@types/archiver": "^5.3.1",
		"@types/debug": "^4.1.7",
		"@types/eslint": "^8.2.2",
		"@types/glob": "^7.2.0",
