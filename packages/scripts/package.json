    "archiver": "^5.3.2",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^10.0.0",
    "crlf": "^1.1.1",
    "debug": "^4.3.4",
    "depcheck": "^1.4.5",
    "eslint": "8.47.0",
    "eslint-import-resolver-node": "^0.3.9",
    "glob": "^10.3.3",
    "human-format": "^1.2.0",
    "is-git-dirty": "^2.0.2",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "prettier": "^3.0.2",
    "pretty-quick": "^3.1.3",
    "progress": "^2.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
