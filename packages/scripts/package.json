	},
	"peerDependencies": {
		"@essex/eslint-config": ">=19.0.2",
		"@essex/jest-config": ">=19.0.2",
		"@essex/prettier-config": ">=18.0.2",
		"@typescript-eslint/eslint-plugin": ">= 4.4.1",
		"@typescript-eslint/parser": ">= 4.4.1",
