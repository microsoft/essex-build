{
	"name": "eslint-plugin-esm",
	"version": "0.0.1",
	"description": "eslint plugin for enforcing the use of file extensions in relative import paths.",
	"type": "commonjs",
	"main": "./src/index.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/essex-js-build",
		"directory": "packages/eslint-plugin-esm"
	},
	"publishConfig": {
		"main": "dist/cjs/index.js",
		"module": "dist/esm/index.mjs",
		"types": "dist/types/index.d.ts",
		"exports": {
			"import": "./dist/esm/index.mjs",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts"
		}
	},
	"scripts": {
		"clean": "essex clean ./dist",
		"test": "NODE_OPTIONS=--experimental-vm-modules yarn node $(yarn bin jest) --runInBand",
		"build": "essex build --mode dual",
		"start": "essex watch"
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@sinclair/typebox": "^0.23.5",
		"@typescript-eslint/utils": "^5.23.0",
		"micromatch": "^4.0.5"
	},
	"devDependencies": {
		"@essex/jest-config": "workspace:^",
		"@essex/scripts": "workspace:^",
		"@essex/tsconfig-base": "workspace:^",
		"@types/eslint": "^8.4.2",
		"@types/jest": "^27.5.1",
		"@types/micromatch": "^4.0.2",
		"@types/node": "^17.0.31",
		"@typescript-eslint/parser": "^5.22.0",
		"eslint": "^8.14.0",
		"jest": "^28.1.0",
		"npm-run-all": "^4.1.5",
		"ts-jest": "^28.0.2",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.4"
	},
	"peerDependencies": {
		"eslint": ">=7"
	}
}
