{
	"extends": "@tsconfig/strictest",
	"compilerOptions": {
		// The base configuration uses a bleeding-edge setup.
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ESNext"],

		// Tone down the strictness
		"noImplicitReturns": false,
		"exactOptionalPropertyTypes": false
	}
}
