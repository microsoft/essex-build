{
	"name": "essex-js-build",
	"private": true,
	"license": "MIT",
	"contributors": [
		"David Tittsworth <datit@microsoft.com>",
		"Chris Trevino <chtrevin@microsoft.com>"
	],
	"packageManager": "yarn@3.2.4",
	"scripts": {
		"_release_packages": "turbo run release",
		"_version_cut": "yarn version apply --all",
		"preinstall": "npx only-allow yarn",
		"postinstall": "husky install",
		"clean": "turbo run clean",
		"build": "turbo run build",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"prettify": "essex prettify",
		"ci": "turbo run ci",
		"lint_all": "essex lint --fix",
		"is_clean": "essex git-is-clean",
		"update_sdks": "yarn dlx @yarnpkg/sdks vscode",
		"release": "run-s clean _version_cut ci _release_packages"
	},
	"devDependencies": {
		"@essex/eslint-config": "workspace:^",
		"@essex/eslint-plugin": "workspace:^",
		"@essex/jest-config": "workspace:^",
		"@essex/prettier-config": "workspace:^",
		"@essex/scripts": "workspace:^",
		"@essex/tsconfig-node": "workspace:^",
		"@essex/tsconfig-node14": "workspace:^",
		"@types/eslint": "^8.4.10",
		"@types/jest": "^29.2.2",
		"@typescript-eslint/eslint-plugin": "^5.42.1",
		"@typescript-eslint/parser": "^5.42.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.27.0",
		"eslint-import-resolver-node": "^0.3.6",
		"husky": "^8.0.2",
		"jest": "^29.3.1",
		"lint-staged": "^13.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"turbo": "^1.6.3",
		"typescript": "^4.8.4"
	},
	"workspaces": [
		"packages/*"
	],
	"resolutions": {
		"@types/react": "18.0.6",
		"@types/react-dom": "18.0.0"
	}
}
