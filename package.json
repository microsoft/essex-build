{
	"name": "essex-js-build",
	"private": true,
	"license": "MIT",
	"contributors": [
		"David Tittsworth <datit@microsoft.com>",
		"Chris Trevino <chtrevin@microsoft.com>"
	],
	"packageManager": "yarn@3.2.1",
	"scripts": {
		"preinstall": "npx only-allow yarn",
		"postinstall": "husky install",
		"clean": "turbo run clean",
		"build": "turbo run build",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"release": "yarn workspaces foreach -piv run release",
		"prettify": "essex prettify",
		"lint_all": "essex lint --fix",
		"_ci_packages": "turbo run ci",
		"_git_is_clean": "essex git-is-clean",
		"ci": "run-s _ci_packages lint_all _git_is_clean"
	},
	"devDependencies": {
		"@essex/eslint-config": "workspace:^",
		"@essex/eslint-plugin": "workspace:^",
		"@essex/jest-config": "workspace:^",
		"@essex/prettier-config": "workspace:^",
		"@essex/scripts": "workspace:^",
		"@essex/tsconfig-node": "workspace:^",
		"@essex/tsconfig-node14": "workspace:^",
		"@types/eslint": "^8.4.2",
		"@types/jest": "^27.5.1",
		"@typescript-eslint/eslint-plugin": "^5.25.0",
		"@typescript-eslint/parser": "^5.25.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.15.0",
		"eslint-import-resolver-node": "^0.3.6",
		"husky": "^8.0.1",
		"jest": "^28.1.0",
		"lint-staged": "^12.4.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.6.2",
		"turbo": "^1.2.11",
		"typescript": "^4.6.4"
	},
	"workspaces": [
		"packages/*"
	],
	"resolutions": {
		"@types/react": "18.0.6",
		"@types/react-dom": "18.0.0"
	}
}
