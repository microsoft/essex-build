{
	"name": "essex-js-build",
	"private": true,
	"license": "MIT",
	"contributors": [
		"David Tittsworth <datit@microsoft.com>",
		"Chris Trevino <chtrevin@microsoft.com>"
	],
	"packageManager": "yarn@3.2.1",
	"scripts": {
		"preinstall": "npx only-allow yarn",
		"postinstall": "husky install",
		"clean_primary": "yarn workspaces foreach --exclude essex-js-build --exclude '@essex/test-*' -piv run clean",
		"clean_tests": "yarn workspaces foreach --include '@essex/test-*' -piv run clean",
		"clean": "run-s clean_tests clean_primary",
		"build": "yarn workspaces foreach -piv --topological-dev run build",
		"lint": "yarn workspaces foreach -piv --all run lint",
		"test": "yarn workspaces foreach -piv --all run test",
		"version": "yarn workspaces foreach --all -ivd version",
		"release": "yarn workspaces foreach --all --exclude '@essex/test-*' --exclude essex-js-build -pv npm publish --tolerate-republish --access public",
		"jest": "NODE_OPTIONS=--experimental-vm-modules yarn node $(yarn bin jest) --runInBand",
		"eslint": "ESSEX_DEBUG=1 yarn essex lint --fix",
		"prettify": "essex prettify",
		"git_is_clean": "yarn essex git-is-clean",
		"ci": "run-s build lint eslint test jest"
	},
	"devDependencies": {
		"@essex/eslint-config": "workspace:^",
		"@essex/eslint-plugin": "workspace:^",
		"@essex/jest-config": "workspace:^",
		"@essex/prettier-config": "workspace:^",
		"@essex/scripts": "workspace:^",
		"@essex/tsconfig-node": "workspace:^",
		"@essex/tsconfig-node14": "workspace:^",
		"@types/eslint": "^8.4.2",
		"@types/jest": "^27.5.1",
		"@typescript-eslint/eslint-plugin": "^5.25.0",
		"@typescript-eslint/parser": "^5.25.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.15.0",
		"eslint-import-resolver-node": "^0.3.6",
		"husky": "^8.0.1",
		"jest": "^28.1.0",
		"lint-staged": "^12.4.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.6.2",
		"typescript": "^4.6.4"
	},
	"workspaces": [
		"packages/*"
	],
	"resolutions": {
		"@types/react": "18.0.6",
		"@types/react-dom": "18.0.0"
	}
}
