{
	"name": "essex-js-build",
	"private": true,
	"license": "MIT",
	"contributors": [
		"David Tittsworth <datit@microsoft.com>",
		"Chris Trevino <chtrevin@microsoft.com>"
	],
	"packageManager": "yarn@3.3.1",
	"scripts": {
		"_release_packages": "turbo run release",
		"_version_cut": "yarn version apply --all",
		"_check_packages": "turbo run check",
		"_fix_packages": "turbo run fix",
		"_ci_packages": "turbo run ci",
		"_essex_lint": "essex lint --noFormat ",
		"_essex_lint_fix": "essex lint --noFormat --fix",
		"_rome_check": "rome ci .",
		"_rome_format": "rome format . --write",
		"_rome_check_apply": "rome check --apply-suggested .",
		"clean": "turbo run clean",
		"check": "run-s _check_packages _essex_lint _rome_check",
		"fix": "run-s _fix_packages _essex_lint_fix _rome_format _rome_check_apply",
		"build": "turbo run build",
		"test": "turbo run test",
		"ci": "run-s _ci_packages _essex_lint _rome_check",
		"is_clean": "essex git-is-clean",
		"update_sdks": "yarn dlx @yarnpkg/sdks vscode",
		"release": "run-s clean _version_cut ci _release_packages"
	},
	"devDependencies": {
		"@essex/eslint-config": "workspace:^",
		"@essex/eslint-plugin": "workspace:^",
		"@essex/jest-config": "workspace:^",
		"@essex/prettier-config": "workspace:^",
		"@essex/scripts": "workspace:^",
		"@essex/tsconfig-node": "workspace:^",
		"@essex/tsconfig-node14": "workspace:^",
		"@types/jest": "^29.2.5",
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.31.0",
		"eslint-import-resolver-node": "^0.3.6",
		"jest": "^29.3.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.1",
		"rome": "^11.0.0",
		"turbo": "^1.6.3",
		"typescript": "^4.9.4"
	},
	"workspaces": [
		"packages/*"
	],
	"resolutions": {
		"@types/react": "18.0.6",
		"@types/react-dom": "18.0.0"
	}
}
