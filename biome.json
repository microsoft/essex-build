{
	"files": {
		"ignore": [
			".devcontainer/",
			".pnp.cjs",
			".pnp.loader.mjs",
			".swcrc",
			".turbo",
			".vscode",
			".yarn",
			"api-extractor.json",
			"build",
			"dist",
			"docs",
			"lib",
			"package.json",
			"storybook-static",
			"tsconfig.cjs.json",
			"tsconfig.esm.json"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"all": true
			},
			"complexity": {
				"all": true
			},
			"suspicious": {
				"all": true,
				"noExplicitAny": "off"
			},
			"style": {
				"all": true,
				"useNamingConvention": {
					"options": {
						"strictCase": false
					}
				}
			}
		}
	},
	"javascript": {
		"globals": ["$", "React", "JSX", "describe", "it", "expect"],
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingComma": "all"
		}
	},
	"formatter": {
		"indentStyle": "tab"
	}
}
