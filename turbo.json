{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "lib/**"]
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"ci": {
			"dependsOn": ["build", "test", "check-deps"],
			"outputs": ["dist/**", "lib/**"]
		},
		"release": {
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"check-deps": {
			"dependsOn": ["@essex/scripts#build"]
		}
	}
}
