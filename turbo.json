{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "lib/**"]
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"ci": {
			"dependsOn": ["lint", "build", "test", "//#lint_all", "//#rome:ci"],
			"outputs": ["dist/**", "lib/**"]
		},
		"release": {
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"//#rome:ci": {
			"dependsOn": ["^lint"],
			"cache": false
		},
		"//#lint_all": {
			"dependsOn": ["^build"]
		}
	}
}
