{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/main",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "lib/**"]
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"ci": {
			"dependsOn": ["build", "lint", "test"],
			"outputs": ["dist/**", "lib/**"]
		},
		"release": {
			"cache": false
		},
		"clean": {
			"cache": false
		}
	}
}
