{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    },
    "ignore": [
      "dist",
      "lib",
      "build"
    ]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingComma": "all",
      "quoteProperties": "asNeeded"
    }
  },
  "formatter": {
    "indentStyle": "tab",
    "ignore": ["dist", "lib", "build"]
  }
}